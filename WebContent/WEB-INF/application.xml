<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:p="http://www.springframework.org/schema/p"
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- action -->
	<!-- 注册loginAction，登录功能，依赖userService -->
	<bean id="loginAction" class="indi.bigbrotherlee.bbs.web.LoginAction" scope="prototype">
		<property name="userService" ref="userService"></property>
	</bean>
	
	<!-- 注册userService，处理User表业务，依赖userDao（接口） -->
	<bean id="userService" class="indi.bigbrotherlee.bbs.service..impl.UserServiceImpl">
		<property name="userDao" ref="userDao"></property>
	</bean>
	
	<!-- 注册UserDAO，具体类为UserDaoImpl，处理User表的增删改查，依赖于Spring的提供的hibernate模板类 -->
	<bean id="userDao" class="indi.bigbrotherlee.bbs.dao.impl.UserDaoImpl">
		<property name="hTemplate" ref="hTemplate"></property>
	</bean>
	
	<!-- 配置c3p0连接池 -->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="com.mysql.jdbc.Driver"></property>
		<property name="jdbcUrl" value="jdbc:mysql://127.0.0.1:3306/bbs?useSSL=true"></property>
		<property name="user"  value="root"></property>
		<property name="password"  value="root'"></property>
	</bean>
	
	<!-- hibernate部分；Spring提供的会话工厂和hibernate模板 -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
		<property name="configLocations" value="/WEB-INF/hibernate.cfg.xml"></property>
	</bean>
	<bean id="hTemplate" class="org.springframework.orm.hibernate5.HibernateTemplate">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
</beans>

